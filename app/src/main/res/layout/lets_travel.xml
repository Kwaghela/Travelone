<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardlinear">
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_margin="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="2dp"
        app:cardElevation="1dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:padding="5dp">
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/profile"
            app:civ_fill_color="@color/md_grey_700"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"/>
<!--        <android.support.v4.widget.CircleImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/card_image"
            android:src="@drawable/profile"

            />-->
        <TextView
            android:id="@+id/uname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_toRightOf="@+id/card_image"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/from"
            android:textStyle="italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_below="@+id/uname"
            android:layout_marginLeft="8dp"
            android:padding="2dp"
            android:layout_toRightOf="@+id/card_image" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/where2where"
            android:textStyle="italic"
            android:layout_below="@id/uname"
            android:layout_toRightOf="@+id/from"
            android:padding="2dp"/>
        <TextView
            android:id="@+id/to"
            android:textStyle="italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_below="@id/uname"
            android:padding="2dp"
            android:layout_toRightOf="@+id/where2where" />
        <TextView
            android:id="@+id/via"
            android:textStyle="italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Via"
            android:paddingLeft="10dp"
            android:paddingRight="2dp"
            android:layout_toRightOf="@id/card_image"
            android:layout_below="@id/to"/>
        <TextView
            android:id="@+id/medium"
            android:textStyle="italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/to"
            android:layout_toRightOf="@id/via"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/description"
            android:text="Description :"
            android:padding="2dp"
            android:layout_below="@id/card_image"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/describe"
            android:layout_below="@id/description"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/request"
            android:background="@drawable/buttoback"
            android:layout_marginTop="8dp"
            android:text="REQUEST FOR TRIP"
            android:textStyle="italic"
            android:textColor="@color/md_grey_500"
            android:textSize="10dp"
            android:textAlignment="textEnd"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/describe"
            />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
